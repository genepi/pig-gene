<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="run_server" name="" >
    
	
	<property name="cloud.host" value="138.232.66.81" />
	<property name="cloud.username" value="hadoop" />
	<property name="cloud.password" value="#12gene#hadoop" />	
	<property name="cloud.dir" value="/home/hadoop/clemensTests" />
	<property name="hadoop.bin" value="/home/hadoop/hadoop-0.20.2-cdh3u5/bin/hadoop" />
	<property name="app.jar" value="wordcount.jar" />

	<property name="app.main" value="wordcount.WordCount" />
	
	<target name="compile">
    	<javac srcdir="src" destdir="bin" classpath="" >
			<classpath>
				<fileset dir="jars" />
			</classpath>
    	</javac>   		
    </target>

	
    <target name="create_jar" depends="compile">
    	
    	<delete dir="dist"></delete>
    	<mkdir dir="dist"></mkdir>
    	
        <jar destfile="dist/${app.jar}" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="${app.main}"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="bin"/>
        	
            <zipfileset excludes="META-INF/*.SF" src="lib/hadoop-core-0.20.2-cdh3u3.jar"/>
        	<zipfileset excludes="META-INF/*.SF" src="lib/commons-cli-1.2.jar"/>
        	<zipfileset excludes="META-INF/*.SF" src="lib/commons-logging-1.1.1.jar"/>
        </jar>
    </target>

	
	<target name="copy_jar_file" depends="create_jar">
		<echo>Copy jar file...</echo>
		<scp file="dist/${app.jar}" todir="${cloud.username}@${cloud.host}:${cloud.dir}" password="${cloud.password}" trust="true"></scp>
	</target>

	
	<target name="run_server" depends="copy_jar_file">	
		
		<echo>Run server...</echo>
		<sshexec host="${cloud.host}" username="${cloud.username}" password="${cloud.password}" trust="true"
			command="hadoop fs -rmr clemensTests/out; ${hadoop.bin} jar ${cloud.dir}/${app.jar} clemensTests clemensTests/out" >
		</sshexec> 
		
	</target>
</project>
