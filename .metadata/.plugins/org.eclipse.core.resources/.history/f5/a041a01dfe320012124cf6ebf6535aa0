package pigGene;

import java.io.IOException;

import org.apache.pig.EvalFunc;
import org.apache.pig.data.Tuple;

public class ExtractGQ extends EvalFunc<String> {

	@Override
	public String exec(Tuple input) throws IOException {
		if (input == null || input.size() != 1) {
			throw new IOException("input is null or not a single string");
		}
		String genotype = (String) input.get(0);
		int startIndex = genotype.lastIndexOf(':') + 1;
		return genotype.substring(startIndex, genotype.length());
	}

}