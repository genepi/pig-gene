/**
 * PigGene - BACHELOR PROJECT
 * 
 * Pig script to filter a specified range
 * of positions and to join the input file
 * with the refererce file to gain the
 * rs-number. This script outputs the 
 * chromosome, the position, the rs-number
 * and the genotype information
 * 
 * call this script like this:
 * pig -param input=GeneSamples/in/chr20.vcf -param ref=GeneRefFile/00-All.vcf -param accuracy=0 -param start= positionRange.pig
 * 
 * @author: Clemens Banas
 */
 
REGISTER pigGene.jar;
 
inputFile = LOAD '$input' USING pigGene.PigGeneStorage();
A = FILTER inputFile BY pigGene.FilterRange($1, $accuracy, $start, $end);

refFile = LOAD '$ref' USING PigStorage('\t')
			AS (chrom:chararray, pos:int, id:chararray, ref:chararray, 
						alt:chararray, qual:float, filt:chararray, info:chararray);

B = FOREACH refFile GENERATE chrom, pos, id;

C = JOIN A BY ($1,$2), B BY (chrom,pos);