<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="copy_jar_file" name="" >
    
	<property name="cloud.host" value="genepi-calc.uibk.ac.at" />
	<property name="cloud.username" value="clemens" />
	<property name="cloud.dir" value="/home/clemens/pigGeneApp" />
	<property name="local.pig" value="pigFiles" />
	
	<property name="src.dir" value="src" />
	<property name="class.dir" value="bin" />
	<property name="lib.dir" value="lib" />
	<property name="jar.dir" value="dist" />
	<property name="app.jar" value="pigGene.jar" />
	
	<path id="libraries.path">
		<fileset dir="${lib.dir}">
			<include name="**/*.jar" />
		</fileset>
	</path>
	
	<target name="clean" description="delete old files">
		<delete dir="${class.dir}" />
		<delete dir="${jar.dir}" />
	</target>
	
	<target name="compile" depends="clean">
		<mkdir dir="${class.dir}" />
    	<javac srcdir="${src.dir}" destdir="${class.dir}" target="1.6" includeantruntime="false">
    		<classpath refid="libraries.path" />
    	</javac>   		
    </target>
	
    <target name="create_jar" depends="compile">  	
    	<delete dir="./dist"></delete>
    	<mkdir dir="./dist"></mkdir>
    	
        <jar destfile="dist/${app.jar}" filesetmanifest="mergewithoutmain">
            <fileset dir="/bin"/>
        </jar>
    </target>
	
	<target name="copy_jar_file" depends="create_jar">
		<echo>copy pigGene jar file...</echo>
		<scp file="dist/${app.jar}"  todir="${cloud.username}@${cloud.host}:${cloud.dir}/lib" password="${cloud.password}" trust="true"></scp>
		<echo>copy pig scripts...</echo>
		<scp todir="${cloud.username}@${cloud.host}:${cloud.dir}/pigScripts" password="${cloud.password}" trust="true"><fileset dir="${local.pig}"></fileset></scp>
	</target>

</project>